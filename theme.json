{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "layout": {
            "contentSize": "750px",
            "wideSize": "1200px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Bebas Neue, sans-serif",
                    "name": "Bebas Neue",
                    "slug": "bebas-neue"
                },
                {
                    "fontFamily": "Montserrat, sans-serif",
                    "name": "Montserrat",
                    "slug": "montserrat"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                }
            ],
            "fontWeight": true,
            "fontStyle": true,
            "lineHeight": true
        },
        "color": {
            "custom": true,
            "palette": []
        },
        "spacing": {
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vh",
                "vw"
            ]
        },
        "custom": {
            "shrinkHeaderOffset": "50px"
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--montserrat)",
            "fontSize": "16px",
            "lineHeight": "1.6"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bebas-neue)",
                    "fontWeight": "900"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bebas-neue)",
                    "fontWeight": "800"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bebas-neue)",
                    "fontWeight": "700"
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}